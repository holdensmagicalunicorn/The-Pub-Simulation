import edu.ucdavis.jr.*;
import java.util.*;

public abstract class Person {

  private Door door;
  private int numCalls;  
  private String name;
  
  public op void tellLastCallOrClosing();
  
  @Override
  public String toString()
  {
    return name;
  }

  public Person(String name)
  {
    this.name = name; 
  }

  public Person()
  {
    this("Unnamed");    
  }

  public void say(String msg)
  {
    System.out.println("Person " + name + " says: " + msg);        
  }
  

  private boolean enterDoor()
  {
    return Global.door.add(this);    
  }
  
  private void leaveBar()
  {
    call Global.door.leave(this);
  }

  public boolean knowsItsClosed()
  {
    return numCalls >= 2;    
  }

  public boolean knowsLastCallHasBeen()
  {
    return numCalls >= 1;    
  }    

  protected abstract boolean shouldGoHome();
  
  protected abstract void oneIteration();
  
  
  public process personProcess
  {
    say("I'm going in ..."); 
    if( enterDoor())
      {        
        startLoop();    
        say("I'm going home ...");    
        leaveBar();    
      }
    
  }
  
  
  private void startLoop()
  {    
    while(!shouldGoHome())
      {
        oneIteration();        
      }
  } 
}
